<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClipView">
        <!-- Padding -->
        <attr name="clipPadding" format="dimension" />
        <attr name="clipPaddingLeft" format="dimension" />
        <attr name="clipPaddingRight" format="dimension" />
        <attr name="clipPaddingTop" format="dimension" />
        <attr name="clipPaddingBottom" format="dimension" />
        <!-- Radius -->
        <attr name="clipRadius" format="dimension" />
        <attr name="clipRadiusTopLeft" format="dimension" />
        <attr name="clipRadiusTopRight" format="dimension" />
        <attr name="clipRadiusBottomLeft" format="dimension" />
        <attr name="clipRadiusBottomRight" format="dimension" />
        <!-- Corner clipping -->
        <attr name="clipTopLeftVertX" format="dimension" />
        <attr name="clipTopLeftVertY" format="dimension" />
        <attr name="clipTopRightVertX" format="dimension" />
        <attr name="clipTopRightVertY" format="dimension" />
        <attr name="clipBottomLeftVertX" format="dimension" />
        <attr name="clipBottomLeftVertY" format="dimension" />
        <attr name="clipBottomRightVertX" format="dimension" />
        <attr name="clipBottomRightVertY" format="dimension" />
    </declare-styleable>
</resources>